@model IEnumerable<Inuplan.Common.DTOs.ImageDTO>

@{
    ViewBag.Title = "UserImages";
}

@{ var name = Model.First().Username; }

<div class="container">
    <div class="row"><div class="col-md-12"><p></p></div></div>
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <h1>@name's images</h1>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <p class="text-center">
                @foreach (var item in Model)
                {
                    <img src="@item.PathThumbnailUrl" alt="@item.Filename" class="img-thumbnail" />
                }
            </p>
        </div>
    </div>
