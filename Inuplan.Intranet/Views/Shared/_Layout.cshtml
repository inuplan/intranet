<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inuplan Intranet</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div id="content"></div>
    @RenderBody()

    <environment names="Development">
        <script type="text/javascript">
            var globals = {
                urls: {
                    users: 'http://localhost:9000/api/user',
                    images: 'http://localhost:9000/api/userimage',
                    imagecomments: 'http://localhost:9000/api/imagecomment',
                    whatsnew: 'http://localhost:9000/api/whatsnew',
                    forumtitle: 'http://localhost:9000/api/forumtitle',
                    forumpost: 'http://localhost:9000/api/forumpost',
                    forumcomments: 'http://localhost:9000/api/forumcomment',
                    diagnostics: 'http://localhost:9000/api/diagnostic',
                    employeeHandbook: 'http://www.google.com',
                    c5Search: 'http://www.google.dk',
                    websocket: {
                        latest: 'ws://localhost:9000/latest',
                    },
                    intranetside: 'http://www.reddit.com/',
                },
                currentUsername: '@ViewBag.Username'
            };
        </script>
        @*<script src="~/lib/vendors.js"></script>*@
        <script src="~/lib/lib.js"></script>
        <script src="~/js/app.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script type="text/javascript">
            var globals = {
                urls: {
                    users: 'http://intranet:9000/api/user',
                    images: 'http://intranet:9000/api/userimage',
                    imagecomments: 'http://intranet:9000/api/imagecomment',
                    whatsnew: 'http://intranet:9000/api/whatsnew',
                    forumtitle: 'http://intranet:9000/api/forumtitle',
                    forumpost: 'http://intranet:9000/api/forumpost',
                    forumcomments: 'http://intranet:9000/api/forumcomment',
                    diagnostics: 'http://intranet:9000/api/diagnostic',
                    employeeHandbook: 'http://intranetside/Medarbejderhåndbog',
                    c5Search: 'http://intranetc5/Home/Search',
                    websocket: {
                        latest: 'ws://intranet:9000/latest',
                    },
                    intranetside: 'http://intranetside/',
                },
                currentUsername: '@ViewBag.Username'
            };
        </script>
        @*<script src="~/lib/vendors.min.js"></script>*@
        <script src="~/lib/lib.min.js"></script>
        <script src="~/js/app.min.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>