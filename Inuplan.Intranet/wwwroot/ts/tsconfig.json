{
    "compilerOptions": {
        "removeComments": true,
        "jsx": "react",
        "module": "es6",
        "outDir": "./dist",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "target": "es3",
        "lib": [
            "es2015", "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "redux": [ "node_modules/redux/index.d.ts" ],
            "immutable": [ "node_modules/immutable/dist/immutable.d.ts" ],
            "redux-thunk": [ "node_modules/redux-thunk/index.d.ts" ],
            "draft-js-import-markdown": [ "typings/locals/rte/markdown.import.d.ts" ],
            "draft-js-export-markdown": [ "typings/locals/rte/markdown.export.d.ts" ]
        },
        "typeRoots": [
            "./typings/globals"
        ]
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "./src/app.tsx"
    ],
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ]
}